<div class="article">

  <h3 class="panel-title article-title"><%= article.title %></h3>
  Updated <%= article.updated_at.strftime("%B %e, %Y") %>.

  <% if current_admin %>
    <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-default' %>
    <%= link_to 'Delete', article_path(article), class: 'btn btn-default', method: :delete %>
  <% end %>

  <div class="article-text">
    <%= simple_format article.content %>
  </div>

</div>
