<%= stylesheet_link_tag "cities" %>
 <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>



<P>Items in <%= @city.name %>, <%= @city.state %>. </P>





<header>
  <nav>
    <img class="" src="https://openclipart.org/image/2400px/svg_to_png/3880/doctormo-Put-Rubbish-in-Bin-Signs.png">


	<% @city.categories.each do |category| %>
		<% if category.name == 'Aluminum & Other Metals'%>
		  <a href= "#metal" + "ss"><%= 'Aluminum/Metals' %></a>
		  <% end %>

		  <% if category.name == 'Paper'%>
		  <a href="#paper"><%= category.name %></a>
		  <% end %>

		  <% if category.name == 'Cardboard'%>
		  <a href="#cardboard"><%= category.name %></a>
		  <% end %>

		  <% if category.name == 'Glass'%>
		  <a href="#glass"><%= category.name %></a>
		  <% end %>
		  <% if category.name == 'Plastic'%>
		  <a href="#plastic"><%= category.name %></a>
		  <% end %>
	<% end %>
  </nav>
</header>



<div id="metal" class="portion Metal">
  <h2>Metals</h2>
</div>


<div class="info">

  <% @city.bins.each do |bin| %>
	<% bin.categories.each do |category| %>
		<% ordered = bin.items.where(category: category).sort_by{ |item| item.name.downcase } %>
		<% ordered.each do |item| %>
			<% if category.name == 'Aluminum & Other Metals'%>
				<% description = item.name + ": " + bin.name.capitalize + " bin"%>
				<p><%= description %></p>
			<% end %>
		<% end %>
	<% end %>
<% end %>
</div>
 
