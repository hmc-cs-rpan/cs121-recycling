<div class="text-left">

    <h1>Add Your City!</h1>

    <%= link_to 'Back', cities_path %>
    <hr>
    <%= form_for @city, html: { multipart: true } do |f| %>
        <div class="form-group">
            <%= f.label :name %>:
            <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :state %>:
            <%= f.select :state, {}, {}, { class: 'form-control' } do %>
                <% @states.each do |state| %>
                    <%= content_tag(:option, state) %>
                <% end %>
            <% end %>
        </div>
        <div class="form-group">
            <%= f.label :zip %>:
            <%= f.text_field :zip, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :website_url %>:
            <%= f.text_field :website_url, class: 'form-control' %>
        </div>

        <div class="form-group">
            <% Item.all.each do |item| %>
                <%= f.label item.name %>
                <%= check_box_tag "item_ids[]", item.id, @city.items.include?(item), class: 'form-control' %>
            <% end %>
        </div>

        <%= f.submit 'Create city', class: 'btn btn-default' %>
    <% end %>
</div>
