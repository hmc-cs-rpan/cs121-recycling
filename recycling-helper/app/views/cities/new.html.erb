<div class="container">

  <div class="panel panel-default">

    <div class="panel-heading">
      <div class="row no-gutters">
        <div class="col-xs-6">
          <h3 class="panel-title">Categories</h3>
        </div>
        <div class="col-xs-6">
          <h3 class="panel-title">Items</h3>
        </div>
      </div>
    </div>

    <% def set_height
        list_height = (Category.count + 2) * 35 + 2
        "max-height: #{list_height}px; min-height: #{list_height}px;"
      end
    %>

    <div class="row no-gutters">
      <div class="col-xs-6" style="padding-right: 0;">

        <div class="scrollable-list">
          <ul class="list-group" style="<%= set_height %>">
            <li class="list-group-item btn btn-default active">
              All Items
            </li>

            <% Category.all.each do |category| %>
              <li class="list-group-item btn btn-default">
                <!-- TODO make onclick action -->
                <%= category.name %>
              </li>
            <% end %>
          </ul>
        </div>

      </div> <!-- col -->

      <div class="col-xs-6" style="padding-left: 0;">

        <div class="scrollable-list">
          <ul class="list-group" style="<%= set_height %>">
            <% Item.all.each do |category| %>
              <li class="list-group-item btn btn-default">
                <!-- TODO make onclick action -->
                <%= category.name %>
              </li>
            <% end %>
          </ul>
        </div>

      </div> <!-- col -->
    </div> <!-- row -->

  </div> <!-- panel -->

</div>
